            border-top-right-radius: 10px;
        }

        #user-list {
            text-align: left;
            padding-left: 10px;
        }

        #user-list>p {
            margin-bottom: 0px;
        }

        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 9999;
        }

        .loader {
            position: absolute;
            top: 50%;
            left: 50%;
            border: 5px solid #f3f3f3;
            border-top: 5px solid #3498db;
            border-radius: 50%;
            width: 50px;
            height: 50px;
            animation: spin 2s linear infinite;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        #control-button {
            transition: opacity 2s ease;
        }

        .hidden {
            opacity: 0;
        }

        #audio-indicator {
            position: absolute;
            height: 25px;
            background-color: #f0f0f0;
            display: flex;
            justify-content: space-between;
            align-items: flex-end;
            padding: 2px;
            border-radius: 5px;
        }

        .bar {
            width: 18px;
            height: 0; /* Initial height of 0 for silent bars */
            background-color: #ccc; /* Gray for silence */
            border-radius: 2px;
            transition: height 0.1s, background-color 0.2s; /* Add transitions for smooth changes */
        }

        .audio-visualizer {
            position: absolute;
            background-color: #33333300;
            width: 20px;
            height: 20px;
            right: 10px;
            top: 10px;
            border-radius: 50%;
            z-index: 999;
        }

        #option-menu {
            position: absolute;
            background-color: rgba(68, 71, 74, 0.7);
            padding: 10px;
            bottom: 40px;
            color: #fff;
            border-radius: 10px;
            width: 100px;
        }

        #option-menu > ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
        }

        #option-menu > ul > li {
            padding: 5px;
        }

        #option-menu > ul > li:hover {
            background-color: rgba(68, 71, 74, 1);
        }

        .video-off {
            z-index: 3;
            width: 100%;
            height: 100%;
            position: absolute;
        }

        .video-on {
            width: 100%;
            z-index: 0;
            position: absolute;
            display: none;
        }
        </style>
</head>

