            background: #1e1f20;
            z-index: 22;
        }


        .mic-image {
            width: 12px;
            height: 12px;
        }

        .button-small-custom {
            display: flex;
            justify-content: center;
            align-items: center;
            position: relative;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            transition: 0.3s;
            background: #44474A;
            margin-left: 10px;
            margin-right: 10px;
        }

        .button-small-custom:hover {
            background-color: #959ca3;
        }

        .button-small-custom-clicked {
            display: flex;
            justify-content: center;
            align-items: center;
            position: relative;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            transition: 0.3s;
            background: #fc5d5b;
            margin-left: 10px;
            margin-right: 10px;
        }

        .button-small-custom-clicked:hover {
            background-color: #ff0000;
        }

        .button-big-custom {
            display: flex;
            justify-content: center;
            align-items: center;
            position: relative;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: #fc5d5b;
            transition: 0.3s;
            margin-left: 10px;
            margin-right: 10px;
        }
        .button-big-custom:hover {
            background-color: #ff0000;
        }

        .button-image {
            width: 40px;
            height: 40px;
        }

        .record-timer {
            position: absolute;
            display: flex;
            justify-content: center;
            align-items: center;
            top: 10px;
            left: 10px;
            background-color: rgba(239, 235, 235, 0.541);
            border-radius: 10px;
            font-size: 12px;
            padding: 10px;
        }

        #snackbar {
            visibility: hidden;
            color: #fff;
            background-color: #333;
            margin-left: -125px;
            border-radius: 10px;
            padding: 10px;
            text-align: center;
            bottom: 30px;
            right: -50px;
            z-index: 1;
            position: absolute;
        }

        #snackbar.show {
            visibility: visible;
            -webkit-animation: fadein 0.5s, fadeout 0.5s 2.5s;
            animation: fadein 0.5s, fadeout 0.5s 2.5s;
        }

        /* Animations for fading in and out */
        @-webkit-keyframes fadein {
            from {
                bottom: 0;
                opacity: 0;
            }

            to {
                bottom: 30px;
                opacity: 1;
            }
        }

        @keyframes fadein {
            from {
                bottom: 0;
                opacity: 0;
            }

            to {
                bottom: 30px;
                opacity: 1;
            }
        }

        @-webkit-keyframes fadeout {
            from {
                bottom: 30px;
                opacity: 1;
            }

            to {
                bottom: 0;
                opacity: 0;
            }
        }

        @keyframes fadeout {
            from {
                bottom: 30px;
                opacity: 1;
            }

            to {
                bottom: 0;
                opacity: 0;
            }
        }

        #alert-screensharing {
            visibility: hidden;
            color: #fff;
            background-color: #333;
            margin-left: -125px;
            border-radius: 10px;
            padding: 10px;
            text-align: center;
            top: 30px;
            left: 50%;
            z-index: 1;
            position: absolute;
        }

        #alert-screensharing.show {
            visibility: visible;
            -webkit-animation: fadein-as 0.5s, fadeout-as 0.5s 2.5s;
            animation: fadein-as 0.5s, fadeout-as 0.5s 2.5s;
        }

        #alert-error {
            visibility: hidden;
            color: #fff;
            background-color: #333;
            margin-left: -125px;
            border-radius: 10px;
            padding: 10px;
            text-align: center;
            top: 30px;
            left: 50%;
            z-index: 1;
            position: absolute;
        }

        #alert-error.show {
            visibility: visible;
            -webkit-animation: fadein-as 0.5s, fadeout-as 0.5s 2.5s;
            animation: fadein-as 0.5s, fadeout-as 0.5s 2.5s;
        }

        /* Animations for fading in and out */
        @-webkit-keyframes fadein-as {
            from {
                top: 0;
                opacity: 0;
            }

            to {
                top: 30px;
                opacity: 1;
            }
        }

        @keyframes fadein-as {
            from {
                top: 0;
                opacity: 0;
            }

            to {
                top: 30px;
                opacity: 1;
            }
        }

        @-webkit-keyframes fadeout-as {
            from {
                top: 30px;
                opacity: 1;
            }

            to {
                top: 0;
                opacity: 0;
            }
        }

        @keyframes fadeout-as {
            from {
                top: 30px;
                opacity: 1;
            }

            to {
                top: 0;
                opacity: 0;
            }
        }

        .chat-bar {
            background-color: #f1f1f1;
            border: 1px solid #d3d3d3;
            max-width: 300px;
            min-width: 300px;
            position: absolute;
            right: 0;
            text-align: center;
            top: 100px;
            z-index: 9;
        }

        #chat-bar-header {
            background-color: #2196f3;
            color: #fff;
            cursor: move;
            max-width: 300px;
            padding: 10px;
            z-index: 10;
        }

        .chat-container {
            background-color: grey;
            font-size: 13px;
            max-height: 200px;
            max-width: 100%;
            min-height: 200px;
            overflow-y: auto;
            padding-bottom: 50px;
            position: relative;
        }

        .chat-footer {
            bottom: 0;
            position: absolute;
            width: 100%;
        }

        .chat-send {
            bottom: 0;
            display: flex;
            height: 40px;
            justify-content: center;
            padding: 5px;
            position: -webkit-sticky;
            position: sticky;
            width: 100%;
        }

        .send-button {
            border-radius: 50px;
            width: 27px;
            height: 27px;
        }

        .your-messages {
            text-align: right;
            width: 100%;
        }

        .sender {
            margin: 0;
        }

        .your-message {
            width: 100%;
            margin: 0;
            display: flex;
            justify-content: right;
        }

        .received-message {
            width: 100%;
            margin: 0;
            display: flex;
            justify-content: left;
        }

        .inside-message {
            max-width: 50%;
            background-color: white;
            border-radius: 10px;
            padding: 1px;
            overflow: hidden;
            display: flex;
            flex-wrap: wrap;
        }

        .received-messages {
            text-align: left;
            width: 100%;
        }

        .type-box {
            height: 90%;
            color: black;
            width: 75% !important;
            background-color: white;
            border-radius: 10px;
            padding: 5px;
        }

        .button-v2 {
            background-color: rgb(60, 64, 67);
            border-radius: 20px;
            width: 40px;
        }

        .pagination-button {
            height: 50px;
            width: 50px;
            background-color: transparent;
            background-repeat: no-repeat;
            border: none;
            overflow: hidden;
            outline: none;
            cursor: pointer;
        }

        .pagination-left {
            position: absolute;
            top: 50%;
            left: 0;
        }

        .pagination-right {
            position: absolute;
            top: 50%;
            right: 0;
        }

        @media (max-width: 950px) {
            .user-video-container {
                margin: 10px;
                height: 40%;
                width: 70%;
                position: relative;
            }

